<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wwcai.crm.workbench.dao.ClueRemarkDao">

    <update id="updateRemark">
        update tbl_clue_remark set noteContent=#{noteContent}, editTime=#{editTime},
        editBy=#{editBy}, editFlag=#{editFlag}
        where id=#{id}
    </update>

    <delete id="deleteRemark">
        delete from tbl_clue_remark where id=#{id}
    </delete>

    <insert id="saveRemark">
        insert into tbl_clue_remark(
            id,
            noteContent,
            createTime,
            createBy,
            editFlag,
            clueId
        )
        values (
            #{id},
            #{noteContent},
            #{createTime},
            #{createBy},
            #{editFlag},
            #{clueId}
        )
    </insert>

    <delete id="delete">
        delete from tbl_clue_remark where clueId=#{clueId}
    </delete>

    <select id="getListById" resultType="ClueRemark">
        select *  from tbl_clue_remark where clueId=#{clueId}
    </select>

</mapper>

































